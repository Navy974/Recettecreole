{% extends 'base.html.twig' %}
{% block title %}Recette Créole - Mes ingrédients
{% endblock %}

{% block body %}
<div class="container mt-4">
{% if not ingredients.items is same as ([]) %}
  
    <h1>Mes ingredients</h1>

    <div class="count mt-4">
    <h4>Il y a {{ ingredients.getTotalItemCount }} ingrédients au total</h4>
</div>

    <table class="table table-hover mt-4">
  <thead>
   <tr>
        <th scope="col">Numéros</th>
        <th scope="col">Nom</th>
        <th scope="col">Prix</th>
        <th scope="col">Date de création</th>
   </tr>
  </thead>
  <tbody>
    {% for  ingredient in ingredients %}
    <tr class="table-primary">
        <th scope="row">{{ ingredient.id }}</th>
        <th>{{ ingredient.name }}</th>
        <th>{{ ingredient.price }}</th>
        <th>{{ ingredient.createAt|date("m/d/Y") }}</th>
    </tr>
    {% endfor %}
  </tbody>
</table>

<div class="navigation d-flex justify-content-center mt-4">
  {{ knp_pagination_render(ingredients) }}
</div>
{% else %}
<h4>Il n'y a pas d'ingredients</h4>
{% endif %}
</div>
{% endblock %}
